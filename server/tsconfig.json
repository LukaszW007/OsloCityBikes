{
  "compilerOptions": {                        
    "target": "es2017",                          
    "module": "NodeNext",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
  },
  "exclude":[
    "./node_modules"
  ],
  "include": [
    "src/"
  ],
  "ts-node": {
    "esm":true,
  }
}