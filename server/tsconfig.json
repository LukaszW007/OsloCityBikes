{
  "compilerOptions": {            
  "target": "es2020",              
  "module": "NodeNext",          
  "lib": ["es6", "ES2020", "ESNext"],          
  "allowJs": true,
  "checkJs": true,
  "outDir": "build",              
  "rootDir": "src",
  "strict": true,     
  "noImplicitAny": true,
  // "noEmit": true,
  "removeComments": true,        /* Do not emit comments to output. */
  "incremental": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "moduleResolution": "NodeNext",
  "isolatedModules": true,
  // "allowImportingTsExtensions": true,
  "skipLibCheck": true,
  },
  "exclude":[
  "./node_modules"
  ],
  "include": [
  "src/"
  ],
  "ts-node": {
  "esm":true,
  }
}